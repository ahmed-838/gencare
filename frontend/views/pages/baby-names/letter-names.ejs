<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/baby-names-components/bootstrap.min.css">
    <link rel="stylesheet" href="/baby-names-components/animate.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/baby-names-components/baby-names.css">
    <title>Baby Names - Letter <%= letter.toUpperCase() %></title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- جانب الكروت -->
            <div class="col-md-6 cards-section">
                <div class="letters-container">
                    <% babyNames.forEach(obj => { %>
                        <div class="letter-card <%= obj.letter === letter ? 'active' : '' %>">
                            <div class="letter-content">
                                <div class="letter-front">
                                    <div class="gif-container">
                                        <img src="<%= obj.image %>.gif" alt="baby gif" class="baby-gif">
                                    </div>
                                </div>
                                <div class="letter-back">
                                    <span class="letter"><%= obj.letter.toUpperCase() %></span>
                                    <a href="/baby-names/<%= obj.letter%>" class="explore-btn">Show Names</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

            <!-- جانب الأسماء -->
            <div class="col-md-6 names-section">
                <div class="names-container">
                    <div class="names-header">
                        <button class="close-btn" onclick="window.location.href='/baby-names'">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    
                    <!-- إضافة GIF الحرف -->
                    <div class="letter-gif-container">
                        <% const currentLetter = babyNames.find(obj => obj.letter === letter) %>
                        <img src="<%= currentLetter.image %>.gif" alt="letter gif" class="letter-gif">
                        <h2>Names Starting With '<%= letter.toUpperCase() %>'</h2>
                    </div>

                    <div class="names-grid">
                        <!-- أسماء الأولاد -->
                        <div class="boys-column">
                            <h3 class="column-title">Boys</h3>
                            <% letterNames
                                .filter(name => name.gender === 'boy')
                                .slice(0, 5)
                                .forEach(name => { %>
                                <div class="name-card boy animate__animated animate__fadeIn">
                                    <h3><%= name.name %></h3>
                                    <div class="name-details">
                                        <p class="meaning"><%= name.meaning %></p>
                                        <p class="origin">Origin: <%= name.origin %></p>
                                    </div>
                                </div>
                            <% }) %>
                        </div>

                        <!-- أسماء البنات -->
                        <div class="girls-column">
                            <h3 class="column-title">Girls</h3>
                            <% letterNames
                                .filter(name => name.gender === 'girl')
                                .slice(0, 5)
                                .forEach(name => { %>
                                <div class="name-card girl animate__animated animate__fadeIn">
                                    <h3><%= name.name %></h3>
                                    <div class="name-details">
                                        <p class="meaning"><%= name.meaning %></p>
                                        <p class="origin">Origin: <%= name.origin %></p>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- إضافة Font Awesome للأيقونات -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</body>
</html> 